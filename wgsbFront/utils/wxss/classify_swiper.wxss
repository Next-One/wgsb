/**index.wxss**/




.tab-box {
  background: #f4f8fb;
  padding-top: 80rpx;
  box-sizing: border-box;
  height: 100%;
}

.tab-content {
  overflow-y: scroll;
}

.good-list {
  padding: 20rpx 20rpx 0 20rpx;
  column-count: 2;
  column-gap: 20rpx;
}

.goods-item {
  break-inside: avoid;
  background: white;
  border-radius: 10rpx;
  overflow: hidden;
}
.image-wrap,.image-item{
  width: 348rpx;
  height: 348rpx;
}

.dish-content{
  padding: 10rpx;
  position: relative
}

.dish-name{
  color: #333;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 32rpx;
}

.dish-brief{
  height: 72rpx;
  line-height: 36rpx;
  color: #666;
}


.dish-price{
  line-height: 60rpx;
  height: 60rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #ff5046;
}

.source-price{
  color: #a5a5a5;
  font-size: 26rpx;
  font-weight: normal;
  text-decoration:line-through;
}

.bg-cart-add{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  bottom: 20rpx;
  right: 20rpx;
  background-size: cover;
  background-repeat: no-repeat;
}
