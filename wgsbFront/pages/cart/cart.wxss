@import "/utils/wxss/cart_list.wxss";
@import "/utils/wxss/cart_down.wxss";

page, .content {
    width: 100%;
    height: 100%;
}

.content {
    position: relative;
    background-color: #f4f8fb;
}

.bg-cart {
    width: 240rpx;
    height: 124rpx;
    margin: 350rpx 0 50rpx 0;
    background-size: cover;
}

.empty-tip {
    color: #999;
    letter-spacing: 4 rpx;
}

.cart-list {
    overflow-y: scroll;
    overflow-x: hidden;
}

.cart-item {
    padding: 30 rpx;
    height: 166 rpx;
    color: #000;
    position: relative;
    background: #fff;
    margin-bottom: 4 rpx;
}

.select-btn, .all-select-btn {
    width: 40 rpx;
    height: 40 rpx;
    background-size: cover;
}

.select-btn {
    margin-right: 30 rpx;
}

.cart-img-wrap {
    height: 100%;
    width: 160 rpx;
    margin: 0 30 rpx;
}

.cart-img {
    height: 100%;
    width: 160 rpx;
}

.cart-content {
    height: 100%;
    position: relative;
}

.cart-name {
    margin-bottom: 20 rpx;
}

.start-price {
    color: rgb(83, 178, 245);
    font-size: 24 rpx;
}

.end-price {
    position: absolute;
    bottom: 0;
    left: 0;
    color: #1fa1fc;
    font-size: 32 rpx;
}

.cart-quantity {
    position: absolute;
    right: 30 rpx;
    bottom: 30 rpx;
    border: 4 rpx #f5f5f5 solid;
    border-radius: 8 rpx;
    height: 60 rpx;
    line-height: 60 rpx;
}

.minus {
    width: 60 rpx;
    height: 60 rpx;
    border-right: 4 rpx #f5f5f5 solid;
    position: relative;
}

.minus-top {
    position: absolute;
    top: 30 rpx;
    left: 20 rpx;
    width: 20 rpx;
    height: 4 rpx;
    background-color: #000;
}

.plus {
    width: 60 rpx;
    font-size: 40 rpx;
    border-left: 4 rpx #f5f5f5 solid;
}

.quantity {
    font-size: 30 rpx;
    width: 80 rpx;
}

