@import "/utils/wxss/base64.wxss";

page {
  overflow: hidden;
}

.content, page {
  height: 100%;
  width: 100%;
  background-color: #f4f8fb;
  color: #111;
  font-size: 26rpx;
}

.content {
  overflow-y: scroll;
}

.empty-order {
  width: 340rpx;
  height: 200rpx;
  margin: 120rpx 0 50rpx;
  background-repeat: no-repeat;
  background-size: cover;
}

.shop-logo {
  width: 20%;
  min-height: 100rpx;
  background-size: 60rpx 60rpx;
  background-repeat: no-repeat;
  background-position: 60rpx 20rpx;
}

.order-info {
  width: 80%;
}

.order-top {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #eee;
}

.order-nav {
  z-index: 10;
  width: 100%;
  height: 100rpx;
  box-shadow: 0px 2rpx 2rpx rgba(0, 0, 0, 0.1);
}

.nav-item {
  height: 100rpx;
  line-height: 100rpx;
}

.tab-box {
  padding-top: 100rpx;
  box-sizing: border-box;
  height: 100%;
}

.tab-content {
  overflow-y: scroll;
}
