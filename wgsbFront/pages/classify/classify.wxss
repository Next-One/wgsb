@import "/utils/wxss/classify_swiper.wxss";

page {
    width: 100%;
    height: 100%;
}

.nav-wrap {
    height: 80rpx;
    width: 100%;
    overflow: hidden;
    line-height: 80rpx;
    background: #f4f8fb;
    white-space: nowrap;
    z-index: 99;
}

.nav-item {
    width: 150rpx;
    display: inline-block;
    text-align: center;
}

.slide-underline{
    position: absolute;
    bottom: 0;
    left: 8rpx;
    transition: all 300ms ease-out;
    -webkit-transition: all 300ms ease-out;
    transform: translateX(0);
    width: 134rpx;
    height: 4rpx;
    background-color: #1fa0fc;
}

