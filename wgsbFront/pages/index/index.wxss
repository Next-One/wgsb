@import "/utils/wxss/goods_list.wxss";
@import "/utils/wxss/animation.wxss";
@import "/utils/wxss/cart_down.wxss";
.s1-slider, .slider-img {
  width: 100%;
  height: 324rpx;
}

.discount-info {
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  padding-left: 70rpx;
}

.naba {
  position: absolute;
  left: 10rpx;
  width: 36rpx;
  top: 34rpx;
  height: 36rpx;
  background-size: cover;
}

.s2-slider {
  height: 100rpx;
  width: 680rpx;
}

.s2-slider-item {
  text-overflow: ellipsis;
}

/* 导航条 */

.nav-list {
  width: 100%;
  padding: 20rpx 0 10rpx;
}

.nav-item-color {
  width: 108rpx;
  height: 108rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}

.nav-item-img {
  width: 60rpx;
  height: 60rpx;
  background-size: cover;
  background-repeat: no-repeat;
}

.bg-gruel, .bg-set-meal {
  width: 66rpx;
  height: 66rpx;
}

.nav-item-desc {
  height: 54rpx;
  line-height: 54rpx;
}

/* 优惠区域 */

.time-area {
  overflow: hidden;
}

.rect {
  height: 332rpx;
  width: 332rpx;
  border-right: 4rpx solid #f4f8fb;
}

.rect .text-area {
  padding: 30rpx 0 30rpx 30rpx;
  width: 302rpx;
}

.tip-desc {
  line-height: 44rpx;
  height: 44rpx;
}

.rect .image-area {
  width: 180rpx;
  height: 180rpx;
}

.square .image-area {
  width: 120rpx;
  height: 120rpx;
}

.square-1, .square-2 {
  height: 164rpx;
  width: 366rpx;
  padding: 0 24rpx;
}

.square-1 {
  border-bottom: 4rpx solid #f4f8fb;
}

