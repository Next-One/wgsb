/* pages/my/my.wxss */
@import "/utils/wxss/base64.wxss";

page {
  overflow: hidden;
}

button::after {
  border: none;
}

.content, page {
  height: 100%;
  width: 100%;
  background-color: #f4f8fb;
  color: #111;
}

.content {
  overflow-y: scroll;
}

.user-info {
  width: 100%;
  height: 240rpx;
  box-sizing: border-box;
  overflow: hidden;
  background-color: #1fa1fc;
  position: relative;
  padding: 20rpx;
  color: #fff;
}

.user-avatar-wrap {
  width: 128rpx;
  height: 128rpx;
  border-radius: 8rpx;
  border: 4rpx #fff solid;
  position: relative;
}

.user-name, .user-time {
  text-indent: 48rpx;
  background-repeat: no-repeat;
  background-size: 36rpx 36rpx;
  background-position: 0% 50%;
}

.user-name {
  line-height: 72rpx;
  height: 72rpx;
}

.user-time {
  line-height: 56rpx;
  height: 56rpx;
  font-size: 24rpx;
}

.icon-avatar {
  position: absolute;
  bottom: -16rpx;
  right: -16rpx;
  width: 36rpx;
  height: 32rpx;
  background-size: cover;
}

.order-manager {
  background-color: #fff;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.my-order {
  padding: 0 10rpx;
}

.see-all {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.bg-right-arr {
  height: 24rpx;
  width: 24rpx;
  background-size: cover;
  background-repeat: no-repeat;
}

.logo-item {
  height: 48rpx;
  line-height: 48rpx;
  padding-left: 54rpx;
  background-size: 36rpx 36rpx;
  background-repeat: no-repeat;
  background-position: 0 50%;
}

.order-kind {
  color: #999;
  margin-top: 20rpx;
  font-size: 24rpx;
}

.order-item {
  width: 120rpx;
  padding: 20rpx 0;
}

.order-logo {
  width: 52rpx;
  height: 52rpx;
  background-repeat: no-repeat;
  background-size: cover;
  margin-bottom: 20rpx;
}

.bg-success-order {
  width: 46rpx;
  height: 46rpx;
}

.my-content {
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.my-item {
  padding: 26rpx 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
